# Backend Configuration
PORT=5001
HOST=localhost
NODE_ENV=development

# CORS Settings - ВАЖНО для синхронизации!
CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001,http://localhost:3000

# Security
JWT_SECRET=local-dev-secret-2024-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# Database
DB_PATH=./database.sqlite

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Error Tracking
ENABLE_ERROR_DETAILS=true
ERROR_STACK_TRACES=true
